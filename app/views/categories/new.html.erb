<main class="bg-slate-300 h-full">
  <nav class="shadow-sm px-4 sm:px-4 py-2.5 dark:bg-blue-900 border-b border-gray-200 dark:border-gray-600">
    <div class="container flex flex-row justify-between items-center mx-auto">
      <a href="/categories" class="flex items-center basis-1/3">
        <svg class="w-6 h-6" fill="none" stroke="white" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
      </a>
      <div class="flex items-center basis-1/3"></div>
      <div class="flex items-center justify-end basis-1/3">
        <input class="self-center text-lg cursor-pointer whitespace-nowrap dark:text-white" type="submit" value="Save" form="create_category" >
      </div>
    </div>
  </nav>

  <div class="w-full flex pt-2.5 h-screen">
    <%= form_with model: @category, :html => {:id => "create_category"} do |f| %>

      <%= f.text_field :icon, autocomplete: "icon", placeholder: 'fa-icon', class: "mt-3 border-b-0 border-slate-400 w-full", required: true %>

      <%= f.text_field :name, autocomplete: "name", placeholder: 'Name', class: "border-slate-400 w-full", required: true %>

    <% end %>

  </div>

</main>
