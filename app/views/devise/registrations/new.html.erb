
<main class="bg-slate-300 h-screen">
  <nav class="shadow-sm px-4 sm:px-4 py-2.5 dark:bg-blue-900 border-b border-gray-200 dark:border-gray-600">
    <div class="container flex flex-wrap justify-between items-center mx-auto">
      <a href="/" class="flex items-center basis-1/3">
        <svg class="w-6 h-6" fill="none" stroke="white" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
      </a>
      <a href="/users/sign_up" class="flex items-center justify-center basis-1/3">
        <span class="self-center text-lg font-semibold whitespace-nowrap dark:text-white">REGISTER</span>
      </a>
      <div class="flex items-center justify-end basis-1/3">
        <input class="self-center text-xl cursor-pointer whitespace-nowrap dark:text-white" type="submit" value="Sign up" form="sign_up" >
      </div>
    </div>
  </nav>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:id => "sign_up"} ) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mt-3 px-2 border-t border-slate-400 w-full bg-white h-20 flex items-center gap-x-1.5">
      <%= image_tag("avatar.jpg", width: 55, class: "rounded-full") %>
      <a class="text-1xl text-gray-600" href="#">Upload picture</a>
    </div>

    <%= f.text_field :name, autocomplete: "name", placeholder: 'Full name', class: "border-b-0 border-slate-400 w-full", required: true %>

    <%= f.email_field :email, autocomplete: "email", placeholder: 'Email', class: "border-b-0 border-slate-400 w-full", required: true %>

    <%= f.password_field :password, placeholder: 'Password', class: "border-b-0 border-slate-400 w-full"   %>

    <%= f.password_field :password_confirmation, placeholder: 'Password confirmation', class: "border-slate-400 w-full"  %>

  <% end %>

</main>
