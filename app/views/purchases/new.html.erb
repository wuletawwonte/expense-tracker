<main class="bg-slate-300 h-full">
  <nav class="px-2 sm:px-4 py-2.5 dark:bg-blue-900 border-b border-gray-200 dark:border-gray-600">
    <div class="container flex flex-row justify-between items-center mx-auto">
      <div class="flex items-center basis-1/3">
        <%= link_to fa_icon("chevron-left", class: "text-white"), categories_path %>
      </div>      
      <div class="flex items-center basis-1/3"></div>
      <div class="flex items-center justify-end basis-1/3">
        <input class="self-center text-lg cursor-pointer whitespace-nowrap dark:text-white" type="submit" value="Save" form="add_purchase" >
      </div>
    </div>
  </nav>

  <div class="w-full flex pt-2.5 h-screen">
    <%= form_with(model: @purchase, url: {action: "create"}, :html => {:id => "add_purchase"}) do |f| %>

      <%= f.text_field :name, autocomplete: "name", placeholder: 'Name', class: "mt-3 border-b-0 border-slate-400 w-full", required: true %>

      <%= f.number_field :amount, autocomplete: "name", placeholder: 'Amount', class: "border-slate-400 w-full", required: true %>

    <% end %>

  </div>

</main>
